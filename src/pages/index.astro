    <!-- â”€â”€ HERO â”€â”€ -->
    <section class="min-h-screen flex flex-col items-center justify-center text-center px-6 pt-24 pb-20">
      <div class="max-w-3xl mx-auto">
        <!-- Brand mark -->
        <div class="hero-reveal w-16 h-16 rounded-full bg-[#f8623a] flex items-center justify-center text-[#2d2d2d] font-bold text-2xl mx-auto mb-8">G</div>

        <h1 class="hero-reveal text-4xl md:text-6xl font-bold tracking-widest mb-6 leading-tight" style="animation-delay:0.1s">
          your gym.<br />
          <span class="text-[#f8623a]">your rules.</span>
        </h1>

        <p class="hero-reveal text-lg md:text-xl text-[#ebebe6]/80 tracking-widest mb-10 max-w-2xl mx-auto leading-relaxed" style="animation-delay:0.2s">
          stop juggling spreadsheets, whatsapp threads, and cash logs.<br class="hidden md:block" />
