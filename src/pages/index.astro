    <!-- Scroll reveal + hero stagger + video fallback -->
    <script>
      // Hero above-fold stagger (fires on load, no scroll needed)
      document.querySelectorAll<HTMLElement>('.hero-reveal').forEach((el, i) => {
        setTimeout(() => el.classList.add('visible'), i * 120);
      });

      // Scroll-triggered reveals for below-fold elements
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            (entry.target as HTMLElement).classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.15 });

      document.querySelectorAll('.reveal, .reveal-fade').forEach(el => observer.observe(el));

      // Video error fallback â€” show branded placeholder if /hero-demo.mp4 missing
      const heroVideo = document.getElementById('hero-video') as HTMLVideoElement | null;
      const heroFallback = document.getElementById('hero-video-fallback');
      heroVideo?.addEventListener('error', () => {
        if (heroVideo) heroVideo.style.display = 'none';
        heroFallback?.classList.remove('hidden');
      });
    </script>

    <!-- Waitlist form JS â€” direct PostgREST insert, return=minimal, no page reload -->
    <script>
      const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
      const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
      const LISTMONK_URL = import.meta.env.PUBLIC_LISTMONK_URL;
      const LISTMONK_API_TOKEN = import.meta.env.PUBLIC_LISTMONK_API_TOKEN;

      const form = document.getElementById('waitlist-form') as HTMLFormElement | null;
      const success = document.getElementById('waitlist-success');
      const btn = form?.querySelector('button[type="submit"]') as HTMLButtonElement | null;

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!form || !success) return;

        if (btn) btn.disabled = true;

        const data = new FormData(form);
        const phone = (data.get('phone') as string)?.trim() || null;

        try {
          const res = await fetch(`${SUPABASE_URL}/rest/v1/waitlist`, {
            method: 'POST',
            headers: {
              'apikey': SUPABASE_ANON_KEY,
              'Authorization': `Bearer ${SUPABASE_ANON_KEY}`,
              'Content-Type': 'application/json',
              'Prefer': 'return=minimal',
            },
            body: JSON.stringify({
              name: data.get('name'),
              email: data.get('email'),
              phone,
            }),
          });

          if (res.ok) {
            // fire-and-forget: add subscriber to Listmonk + send welcome email
            // signup already succeeded â€” silent fail is fine here
            if (LISTMONK_URL && LISTMONK_API_TOKEN) {
              fetch(`${LISTMONK_URL}/api/tx`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'Authorization': 'Basic ' + btoa('api:' + LISTMONK_API_TOKEN),
                },
                body: JSON.stringify({
                  subscriber_email: data.get('email'),
                  template_id: 1,
                  data: { name: data.get('name') },
                  content_type: 'html',
                }),
              }).catch(() => {});
            }

            form.classList.add('hidden');
            success.classList.remove('hidden');
            // @ts-ignore
            window.umami?.track('waitlist_signup');
          } else {
            alert('something went wrong â€” please try again.');
            if (btn) btn.disabled = false;
          }
        } catch {
          alert('network error â€” please check your connection.');
          if (btn) btn.disabled = false;
        }
      });
    </script>

