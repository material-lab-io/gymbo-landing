                <path d="M1 8.5A15 15 0 0 1 12 5c2.83 0 5.48.77 7.74 2.1"/>
                <circle cx="12" cy="20" r="1" fill="currentColor"/>
              </svg>
            </div>
            <h3 class="font-bold tracking-widest text-[#ebebe6] mb-3 group-hover:text-[#f8623a] transition-colors">works even when the wifi doesn't</h3>
            <p class="text-[#ebebe6]/60 text-sm leading-relaxed tracking-wide">built for real gyms. go fully offline; gymbo syncs when you're back.</p>
          </div>

        </div>

      </div>
    </section>

    <!-- â”€â”€ MOBILE APPS COMING SOON â”€â”€ -->
    <section id="mobile" class="py-24 px-6 border-t border-[#ebebe6]/10">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold tracking-widest mb-4">
