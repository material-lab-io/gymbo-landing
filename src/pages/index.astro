    <!-- â”€â”€ FEATURES â”€â”€ -->
    <section id="features" class="py-24 px-6 border-t border-[#ebebe6]/10">
      <div class="max-w-6xl mx-auto">
        <h2 class="reveal text-2xl md:text-3xl font-bold tracking-widest text-center mb-4">
          everything you need
        </h2>
        <p class="reveal text-center text-[#ebebe6]/50 tracking-widest mb-16" style="animation-delay:0.1s">built for trainers who mean business</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

          <!-- punch cards -->
          <div class="reveal bg-[#232323] border border-[#ebebe6]/10 rounded-2xl p-6 hover:border-[#f8623a]/40 transition-colors group">
