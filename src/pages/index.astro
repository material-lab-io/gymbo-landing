  <body class="bg-[#2d2d2d] text-[#ebebe6] font-mono">

    <!-- NAV -->
    <nav class="fixed top-0 w-full z-50 bg-[#2d2d2d]/90 backdrop-blur border-b border-[#ebebe6]/10">
      <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
